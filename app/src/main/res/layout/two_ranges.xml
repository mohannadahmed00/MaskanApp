<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/background_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title_two_ranges"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="title"
        android:textSize="30dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_room_two_ranges"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="rooms: "
            android:textSize="20dp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/et_min_room_two_ranges"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="min" />

        <me.bendik.simplerangeview.SimpleRangeView
            android:id="@+id/rs_range_room_two_ranges"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:activeLineThickness="3dp"
            app:count="10"
            app:end="7"
            app:lineThickness="3dp"
            app:minDistance="2"
            app:movable="true"
            app:showActiveTicks="false"
            app:showTicks="false"
            app:start="2" />

        <EditText
            android:id="@+id/et_max_room_two_ranges"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="max" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_bath_two_ranges"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="baths:  "
            android:textSize="20dp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/et_min_bath_two_ranges"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="min" />

        <me.bendik.simplerangeview.SimpleRangeView
            android:id="@+id/rs_range_bath_two_ranges"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:activeLineThickness="3dp"
            app:count="10"
            app:end="7"
            app:lineThickness="3dp"
            app:minDistance="2"
            app:movable="true"
            app:showActiveTicks="false"
            app:showTicks="false"
            app:start="2" />


        <EditText
            android:id="@+id/et_max_bath_two_ranges"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="max" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_ok_two_ranges"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/background_yellow"
        android:text="done"
        android:textColor="#ffffff"
        android:textSize="18dp" />


</LinearLayout>